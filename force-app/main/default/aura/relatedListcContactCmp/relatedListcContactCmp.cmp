<aura:component implements="force:hasRecordId,flexiPage:availableForAllPageTypes" controller="aAccountController">

    <!-- Page Attribute -->
    <aura:attribute name="iscContact" type="boolean" description="relatedcContact가 있는지 여부"/>
    
    <!-- dataTable Attribute -->
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List" description="dataTable 컬럼들"/>

    <!-- Handler -->
    <aura:handler name="init" value="{!this}" action="{!c.fnInit}"/>


    <!-- related cContact 없음 -->
    <aura:if isTrue="{!!v.iscContact}">
        <article class="slds-card slds-card_boundary" style="background-color: #f3f2f2;">
            <!-- header -->
            <div class="slds-card__header slds-grid">
                <header class="slds-media slds-media_center slds-has-flexi-truncate" >
                    <!-- icon -->
                    <div class="slds-media__figure">
                        <lightning:icon iconName="standard:contact" title="cContact" size="small"/>
                    </div>

                    <!-- title -->
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title">
                            <a href="#" class="slds-card__header-link slds-truncate" title="aContacts">
                                <span>cContacts</span>
                            </a>
                        </h2>
                    </div>

                    <!-- New button -->
                    <div class="slds-no-flex">
                        <lightning:button variant="neutral" label="New" onclick=""/>
                    </div>
                </header>
            </div>
        </article>
    </aura:if>

    <!-- related cContact 있음 -->
    <aura:if isTrue="{!v.iscContact}">
        <article class="slds-card slds-card_boundary" >
            <!-- header -->
            <div class="slds-card__header slds-grid" style="background-color: #f3f2f2; padding-bottom: 12px; margin-bottom: -12px; border: 1px solid lightgray;">
                <header class="slds-media slds-media_center slds-has-flexi-truncate" >
                    <!-- icon -->
                    <div class="slds-media__figure">
                        <lightning:icon iconName="standard:contact" title="cContact" size="small"/>
                    </div>

                    <!-- title -->
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title">
                            <a href="#" class="slds-card__header-link slds-truncate" title="aContacts">
                                <span>cContacts</span>
                            </a>
                        </h2>
                    </div>

                    <!-- New button -->
                    <div class="slds-no-flex">
                        <lightning:button variant="neutral" label="New" onclick=""/>
                    </div>
                </header>
            </div>

            <!-- body -->
            <div class="slds-card__body">
                <lightning:datatable
                    keyField="id"
                    data="{!v.data}"
                    columns="{!v.columns}"
                    hideCheckboxColumn="true">
                </lightning:datatable>
            </div>
    
            <!-- footer -->
            <footer class="slds-card__footer">
                <a class="slds-card__footer-action" href="#">View All</a>
            </footer>
        </article>

    </aura:if>

</aura:component>	
